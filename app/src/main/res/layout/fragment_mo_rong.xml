<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MoRongFragment"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/background"
        android:text="Mở rộng"
        android:textSize="17sp"
        android:gravity="center"
        />
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/nen"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="70dp">
       <LinearLayout
           android:layout_marginTop="15dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <ImageView
               android:layout_marginLeft="16dp"
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:src="@mipmap/vi"/>
           <TextView
               android:layout_marginLeft="10dp"
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:text="Ví của tôi"/>

       </LinearLayout>
   </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/nen"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="170dp">
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="16dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/cho_vay"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Sổ nợ"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="16dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/tien"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Đổi ngoại tệ"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="16dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/tien_lai"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Tính lãi xuất"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/nen"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="16dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/gioi_thieu"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Giớ thiệu chức năng"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="16dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/danh_gia"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Đánh giá ứng dụng"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>